{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "strictNullChecks": false,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "typeRoots": ["./types","./node_modules/@types"],
      "paths": {
          "actions*":["./src/actions*"],
            "api/*": ["./src/api/*"],
            "assets/*": ["./src/assets/*"],
            "components/*": ["./src/components/*"],
            "hooks/*": ["./src/hooks/*"],
            "locales/*": ["./src/locales/*"],
            "navigators/*": ["./src/navigators/*"],
            "reducers/*": ["./src/reducers/*"],
            "screens/*": ["./src/screens/*"],
            "store": ["./src/store"],
            "utils/*": ["./src/utils/*"],
            "src": ["./src"],
              },
    },             
    

    "exclude": [
      "./node_modules",
      "babel.config.js",
      "metro.config.js",
      "typings",
      "./types"
    ]
  }