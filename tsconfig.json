{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react", 
    "lib": ["es6"],
    "strictNullChecks": false,
    "skipLibCheck": true,
    "noEmit": true, 
    "target": "esnext",
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "baseUrl": ".",
    "typeRoots": ["./types","./node_modules/@types"],
    "paths": {  
      "actions*":["./src/actions*"],
      "api/*": ["./src/api/*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "locales/*": ["./src/locales/*"],
      "navigators/*": ["./src/navigators/*"],
      "reducers/*": ["./src/reducers/*"],
      "screens/*": ["./src/screens/*"],
      "store": ["./src/store"],
      "utils/*": ["./src/utils/*"],
      "styles": ["./src/styles"],
      "src": ["./src"], 
    },
    "types": ["react"]
  },
  "include": ["**/*.ts", "**/*.tsx", "./node_modules/redux-persist/types"]
}
